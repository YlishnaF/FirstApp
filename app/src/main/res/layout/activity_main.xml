<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:background="@color/MistyRose"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Текстовые поля"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aguafina_script"
        android:text="Не очень важный текст"
        android:textAlignment="center"
        android:textColor="@color/Grey"
        android:textSize="12sp"
        android:textStyle="italic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Я знаю все ответы и напишу их тут"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aguafina_script"
        android:text="Разные кнопки"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вариант первый"
        android:textSize="8sp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="вариант второй"
        android:textSize="8sp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="принимаю все условия"
        android:textColor="@color/Grey"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Перехожу на темную сторону"
        android:textStyle="bold" />
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/LightSalmon"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:fontFamily="casual"
        android:text="на другой странице интересней"
        android:textColor="#C2185B"
        android:textColorLink="#182A5E"
        android:textStyle="italic"
        android:id="@+id/toSecondPage"/>
</LinearLayout>